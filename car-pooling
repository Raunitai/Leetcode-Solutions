#include <vector>
using namespace std;

class Solution {
public:
    bool carPooling(vector<vector<int>>& trips, int capacity) {
        vector<int> passengers(1001, 0); // distance up to 1000

        for (auto &trip : trips) {
            int num = trip[0], from = trip[1], to = trip[2];
            passengers[from] += num;  // pick up
            passengers[to] -= num;    // drop off
        }

        int curr = 0;
        for (int i = 0; i <= 1000; i++) {
            curr += passengers[i];
            if (curr > capacity) return false;
        }

        return true;
    }
};
