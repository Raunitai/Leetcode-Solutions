int subarraysDivByK(int* nums, int numsSize, int k) {
    int* modCount = (int*)calloc(k, sizeof(int));
    modCount[0] = 1;
    int sum = 0, count = 0;

    for (int i = 0; i < numsSize; i++) {
        sum += nums[i];
        int mod = ((sum % k) + k) % k;
        count += modCount[mod];
        modCount[mod]++;
    }

    free(modCount);
    return count;
}
