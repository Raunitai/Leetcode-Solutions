// Forward declaration of guess API.
int guess(int num);

int guessNumber(int n) {
    int left = 1, right = n;

    while (left <= right) {
        int mid = left + (right - left) / 2;
        int res = guess(mid);

        if (res == 0)
            return mid;
        else if (res < 0)
            right = mid - 1;  // Picked number is lower
        else
            left = mid + 1;   // Picked number is higher
    }

    return -1; // Should never reach here
}
