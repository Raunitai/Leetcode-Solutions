int left = 0;
    int right = strlen(s) - 1;
    
    while (left < right) {
        // Move left and right to next alphanumeric
        while (left < right && !isalnum(s[left])) left++;
        while (left < right && !isalnum(s[right])) right--;
        
        // Compare lowering both characters
        if (tolower(s[left]) != tolower(s[right])) {
            return false;
        }
        
        left++;
        right--;
    }
    return true;
