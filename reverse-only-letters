class Solution {
public:
    string reverseOnlyLetters(string s) {
        int left = 0, right = s.size() - 1;

        while (left < right) {
            // move left if not a letter
            if (!isalpha(s[left])) {
                left++;
            }
            // move right if not a letter
            else if (!isalpha(s[right])) {
                right--;
            }
            // both are letters, swap them
            else {
                swap(s[left], s[right]);
                left++;
                right--;
            }
        }

        return s;
    }
};
